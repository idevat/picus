{{#form-for formData submit=(route-action 'onSubmitAction' selectedResource) as |f|}}
  {{#if create}}
    {{f.text-field 'resourceName' label='Resource Name' hint='small help'}}
    {{f.select-field 'resourceProvider' availableAgents._providers label='Class/Providers' update=(route-action 'changeSelectedProvider')}}
    {{f.select-field 'resourceAgent' (get availableAgents selectedProvider) label='Resource Agent' update=(route-action 'changeSelectedAgent')}}
  {{/if}}
  {{metadata.shortdesc}}
  <hr />
  {{agent-properties-form metadata=metadata form=f}}
  {{f.submit submitText}}
{{/form-for}}
