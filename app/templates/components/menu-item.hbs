{{#if isCollapsable}}
  <span class='menu-item-collapse' {{action 'onSelectCollapse'}}>
    {{#if isCollapsed}}+{{else}}-{{/if}}
  </span>
{{/if}}
{{#if onCheckAction}}
  {{input type='checkbox' checked=isChecked}}
{{/if}}
<span class='menu-item' onclick={{action 'onSelectItem'}}>
  {{title}}
  {{#if status}}
    [{{status}}]
  {{/if}}
</span>

{{#unless isCollapsed}}
  {{yield}}
{{/unless}}
