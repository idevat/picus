<span class="menu-header" {{action 'onSelectCollapse'}}>{{title}}</span>

{{#if errorCount}}
  <span class='errors-count' {{action 'showOnlyErrors'}}>
    [{{errorCount}}]
  </span>
{{/if}}

{{#unless isCollapsed}}
  {{#unless data}}
    {{yield}}
  {{else}}
    <ul>
    {{#if onlyErrors}}
      {{#if onCheckAction}}
        {{menu-list data=errorList targetRoute=targetRoute onCheckAction=(action onCheckAction)}}
      {{else}}
        {{menu-list data=errorList targetRoute=targetRoute}}
      {{/if}}
    {{else}}
      {{#if onCheckAction}}
        {{menu-list data=data targetRoute=targetRoute onCheckAction=(action onCheckAction)}}
      {{else}}
        {{menu-list data=data targetRoute=targetRoute}}
      {{/if}}
    {{/if}}
    </ul>
  {{/unless}}
{{/unless}}
