{{#unless multiple}}
  {{#power-select
    selected=tabindex
    options=step
    placeholder=placeholder
    onchange=(action 'onChange' '')
    allowClear=true
    as |record|
  }}
    {{record}}
  {{/power-select}}
{{else}}
  {{#unless spellcheck}}
    {{#power-select-multiple
      selected=tabindex
      options=step
      placeholder=placeholder
      onchange=(action 'onChange' max)
      allowClear=true
      as |record|
    }}
      {{record}}
    {{/power-select-multiple}}
  {{else}}
    <!-- @todo: fix step/spellcheck are just because I have to create a separate component -->
    {{#power-select-multiple-with-create
      selected=tabindex
      options=step
      placeholder=placeholder
      onchange=(action 'onChange')
      oncreate=(action 'onCreate')
      allowClear=true
      as |record|
    }}
      {{record}}
    {{/power-select-multiple-with-create}}
  {{/unless}}
{{/unless}}
