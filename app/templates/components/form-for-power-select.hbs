{{#unless multiple}}
  {{#power-select
    selected=selected
    options=step
    placeholder=placeholder
    onchange=(action 'onChange')
    allowClear=true
    as |record|
  }}
    {{record}}
  {{/power-select}}
{{else}}
  {{#power-select-multiple
    selected=selected
    options=step
    placeholder=placeholder
    onchange=(action 'onChange')
    allowClear=true
    as |record|
  }}
    {{record}}
  {{/power-select-multiple}}
{{/unless}}
