{{#ember-wormhole to="breadcrumb"}}
  <!-- demo of breadcrumb; @todo: create a real component if used -->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">{{#link-to "cluster.properties"}}Home{{/link-to}}</li>
    <li class="breadcrumb-item active">Resources</li>
  </ol>
{{/ember-wormhole}}

<div style="width: 100%; text-align: left; margin-bottom: 1em">
  {{#bs-button onClick=(route-action 'linkTo' 'cluster.resources.create')}}
    Add
  {{/bs-button}}
  {{#bs-button onClick=(route-action 'removeSelectedResources')}}
    Remove <span class="badge">{{model.selectedResources.length}}</span>
  {{/bs-button}}
  {{#bs-button onClick=(route-action 'linkTo' 'cluster.resources.createGroup')}}
    Add Group
  {{/bs-button}}
</div>
{{menu-header
  title=''
  data=model.updatingCluster.firstObject.resources
  isCollapsed=false
  targetRoute='cluster.resources.show'
  onCheckAction=(route-action 'onCheck')
}}
