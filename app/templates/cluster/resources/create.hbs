{{breadcrumb-menu active="Add Resource" path=(array "cluster.index" "cluster.resources")}}

{{#agent-properties
  formData = model.formData
  metadata = model.metadata
  appendValidations = model.resourceValidation
  showInternalNames = showInternalNames
  toggleInternalNames = (action 'toggleInternalNames')
  filterString = filterString
  updateFilterString = (action 'updateFilterString')
  submitTitle = 'Create'
  availableMetadata = availableMetadata
  submitAction = (route-action 'onSubmitAction') as |f|
}}
  {{f.text-field 'resourceName' label='Resource Name' hint='small help' required=true}}
  {{f.select-field 'resourceProvider' model.availableAgents._providers label='Class/Providers' update=(route-action 'changeSelectedProvider') required=true}}
  {{f.select-field 'resourceAgent' (get model.availableAgents model.selectedProvider) label='Resource Agent' update=(route-action 'changeSelectedAgent') required=true}}
  {{model.metadata.shortdesc}}
  <hr />
  {{f.checkbox-field 'clone' label="Clone"}}
  {{f.checkbox-field 'masterslave' label="Master/Slave"}}
<hr />
{{/agent-properties}}
